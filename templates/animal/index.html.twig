{% extends 'base.html.twig' %} {% block title %} Animalerie {% endblock %} {%
block body %} {% block javascripts %} {% block importmap %}
{{ importmap("app") }}
{% endblock %} {% endblock %}

<div class="container">
    <h1>🩳Nos pensionnaires</h1>

    {% if animals is empty %}
    <p>Aucun pensionnaire trouvé. 🥺</p>
    {% else %}
    <div class="Info">
        <ul>
            {% for animal in animals %}
            <li>
                <strong>{{ animal.name }}</strong
                ><br />
                <h3>🎂Date de naissance:</h3>
                <p>{{ animal.birthday|date('d/m/Y') }}</p>
                <h3>🎗️Sexe:</h3>
                <p>{{ animal.sex }}</p>
                <h3>🏡Je suis positionné à l'animalerie:</h3>
                {% if animal.animalerie is empty %}
                <p>On ne ma pas encore positionné 🥺</p>
                {% else %}
                <p>{{ animal.animalerie }}</p>
                {% endif %}
            </li>
            {% endfor %}
        </ul>
    </div>
    {% endif %}
</div>
{% endblock %}
