                            <option value="">🛍️ Produits</option>
                            <option value="/produits">Voir Produits</option>
                            <option value="/createProduit">
                                Créer Produits
                            </option>
                        </select>
                    </li>
                    {#
                    <li><a href="/animals">🤝 Nos pensionnaires</a></li>
                    #}
