                        <select
                            name="products"
                            id="products"
                            onchange="window.location.href=this.value;"
                        >
                            <option value="">🤝 Nos pensionnaires</option>
                            <option value="/animals">
                                Voir nos pensionnaires
                            </option>
                            <option value="/createAnimal">
                                Créer un pensionnaires
                            </option>
                        </select>
                    </li>
                </ul>
            </nav>
        </header>

        {% block body %} {% endblock %}
    </body>
